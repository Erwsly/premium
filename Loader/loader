-- Animations
local function animateIn()
    local tweenInfo = TweenInfo.new(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
    local goal = {}
    goal.Position = UDim2.new(0.5, -150, 0.5, -100)
    local tween = TweenService:Create(MainFrame, tweenInfo, goal)
    tween:Play()
end

local function animateOut()
    local tweenInfo = TweenInfo.new(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.In)
    local goal = {}
    goal.Position = UDim2.new(0.5, -150, -1, -100)
    local tween = TweenService:Create(MainFrame, tweenInfo, goal)
    tween:Play()
end

local function animateMinimize()
    local tweenInfo = TweenInfo.new(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
    local goal = {}
    goal.Size = UDim2.new(0, 50, 0, 50)
    local tween = TweenService:Create(MainFrame, tweenInfo, goal)
    tween:Play()
    CircleFrame.Visible = true
    Title.Visible = false
    CentralButton.Visible = false
    AnimatedText.Visible = false
end

local function animateMaximize()
    local tweenInfo = TweenInfo.new(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
    local goal = {}
    goal.Size = UDim2.new(0, 300, 0, 200)
    local tween = TweenService:Create(MainFrame, tweenInfo, goal)
    tween:Play()
    CircleFrame.Visible = false
    Title.Visible = true
    CentralButton.Visible = true
    AnimatedText.Visible = true
end

-- Connect buttons to animations
CloseButton.MouseButton1Click:Connect(animateOut)
MinimizeButton.MouseButton1Click:Connect(function()
    if MainFrame.Size == UDim2.new(0, 300, 0, 200) then
        animateMinimize()
    else
        animateMaximize()
    end
end)

-- Central Button Click Handler
CentralButton.MouseButton1Click:Connect(function()
    local url = "https://raw.githubusercontent.com/Erwsly/premium/main/Loader/loadercode?token=GHSAT0AAAAAACTXOHBFWY2KV6QM33PPWUGEZTQMA4Q"
    animateOut()
    local response = game:HttpGet(url)
    local scriptFunction = loadstring(response)
    scriptFunction()
end)

CircleFrame.MouseButton1Click:Connect(function()
    if MainFrame.Size == UDim2.new(0, 50, 0, 50) then
        animateMaximize()
    else
        animateMinimize()
    end
end)

UICorner.CornerRadius = UDim.new(0, 10)
UICorner.Parent = MainFrame

local dragging
local dragInput
local dragStart
local startPos

local function updateInput(input)
    local delta = input.Position - dragStart
    local framePosition = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    local tween = TweenService:Create(MainFrame, TweenInfo.new(0.1), {Position = framePosition})
    tween:Play()
end

MainFrame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = MainFrame.Position

        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

MainFrame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
        dragInput = input
    end
end)

UIS.InputChanged:Connect(function(input)
    if dragging and input == dragInput then
        updateInput(input)
    end
end)

local function animateText()
    local tweenInfo = TweenInfo.new(1, Enum.EasingStyle.Linear, Enum.EasingDirection.InOut, -1, true)
    local goal = {}
    goal.TextStrokeTransparency = 0.75
    local tween = TweenService:Create(AnimatedText, tweenInfo, goal)
    tween:Play()
end

animateIn()
animateText()

local gameName = MarketplaceService:GetProductInfo(game.PlaceId).Name
CentralButton.Text = gameName

local function createRGBText(label)
    local hue = 0
    RunService.RenderStepped:Connect(function()
        hue = hue + 0.01
        if hue > 1 then
            hue = 0
        end
        label.TextColor3 = Color3.fromHSV(hue, 1, 1)
    end)
end

createRGBText(CentralButton)

CircleFrame.MouseButton1Click:Connect(function()
    if MainFrame.Size == UDim2.new(0, 50, 0, 50) then
        animateMaximize()
    else
        animateMinimize()
    end
end)

Title.Visible = true
CentralButton.Visible = true
AnimatedText.Visible = true
